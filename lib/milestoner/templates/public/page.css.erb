.milestoner {
  --border-width: 0.15rem;
  --color-black: hsl(0, 0%, 0%);
  --color-butter: hsl(52, 100%, 83%);
  --color-carbon: hsl(219, 6%, 58%);
  --color-cheese: hsl(51, 100%, 93%);
  --color-cloud: hsl(219, 100%, 93%);
  --color-ghost: hsl(171.4, 17.1%, 92%);
  --color-green: hsl(121, 73%, 35%);
  --color-grey: hsl(240, 7%, 97%);
  --color-ice: hsl(216, 100%, 98%);
  --color-major: hsl(7, 79%, 32%);
  --color-minor: hsl(221, 79%, 32%);
  --color-night: hsl(216, 9%, 21%);
  --color-orange: hsl(24.8, 100%, 50.2%);
  --color-patch: hsl(156, 79%, 32%);
  --color-powder: hsl(0, 0%, 98%);
  --color-red: hsl(0, 84.1%, 44.5%);
  --color-silver: hsl(224, 33%, 94%);
  --color-slate: hsl(211, 23%, 41%);
  --color-smoke: hsl(229, 31%, 93%);
  --color-white: hsl(0, 0%, 100%);
  --font-family: Verdana;
  --shadow-color: 0deg 0% 0%;

  font-family: var(--font-family);

  blockquote {
    background-color: var(--color-silver);
    border-left: 0.5rem solid var(--color-slate);
    border-radius: 0.5rem;
    padding: 0.5rem 1rem;

    p {
      margin: 0;
      quotes: "\201C""\201D";

      &::before, &::after {
        font-family: cursive;
        font-size: 1.5rem;
      }

      &::before {
        content: open-quote;
        padding-right: 0.3rem;
      }

      &::after {
        content: close-quote;
        padding-left: 0.1rem;
      }
    }
  }

  :not(pre) > code {
    background-color: var(--color-night);
    border-radius: 0.3rem;
    color: var(--color-white);
    font-size: 0.95rem;
    padding: 0.1rem 0.2rem;
  }

  pre:not([class^=language]) {
    background-color: var(--color-night);
    color: var(--color-ghost);
    line-height: 1.5rem;
    padding: 0.5rem 1rem;
    font-size: 0.9rem;
    white-space: pre-wrap;
  }

  pre {
    border-radius: 0.5rem;
    font-weight: 400;
    padding: 0.5rem;
    word-break: break-word;
  }

  img, video {
    max-width: 100%;
    height: auto;
    object-fit: cover;
  }

  .avatar {
    border-radius: 50%;
    height: fit-content;
  }

  .button {
    background-size: 200% auto;
    border-radius: 0.5rem;
    border: 0.5rem soild var(--color-black);
    box-shadow:
      0.7px 0.7px 1.5px hsl(var(--shadow-color) / 0),
      1.3px 1.3px 2.8px hsl(var(--shadow-color) / 0.07),
      2.6px 2.7px 5.6px hsl(var(--shadow-color) / 0.14);
    cursor: pointer;
    font-size: 0.9rem;
    justify-self: center;
    margin: 0;
    padding: 0.2rem 0.5rem;
    transition: 0.1s;

    &:hover {
      box-shadow:
        0.7px 0.7px 1.5px hsl(var(--shadow-color) / 0),
        1.3px 1.3px 2.8px hsl(var(--shadow-color) / 0.07);
      transform: scale(0.95);
    }
  }

  .dormant {
    align-items: center;
    display: flex;
    justify-content: center;
    flex-direction: column;

    &::before {
      content: "\1F303";
      font-size: 10rem;
    }
  }

  .key {
    background-color: var(--color-silver);
    border-radius: 0.2rem;
    border: 0.1rem solid var(--color-slate);
    color: var(--color-black);
    font-size: 1.3rem;
    font-weight: 600;
    padding: 0.1rem 0.3rem;
    white-space: nowrap;
  }

  .list {
    list-style: none;
    padding: 0;
    margin: 0;

    .item {
      align-items: center;
      display: flex;
      gap: 0.5rem;
    }
  }

  .pill {
    border-radius: 0.5rem;
    padding: 0.2rem 0.4rem;
  }

  .popover {
    border-color: var(--color-black);
    border-radius: 0.5rem;
    padding: 1rem;
    max-width: calc(100vw - 20%);

    &::backdrop {
      backdrop-filter: brightness(60%);
    }

    .label {
      font-size: 1.5rem;
      text-align: center;
      margin: 0 0 1rem 0;
    }

    .sublabel {
      font-size: 1rem;
      margin: 0 0 1rem 0;
    }
  }

  .toggle {
    background-color: var(--color-white);
    border: 0.15rem solid var(--color-smoke);
    color: var(--color-black);
    width: 5rem;
  }

  .page-header {
    align-items: center;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
  }

  .milestones {
    align-items: center;
    display: flex;
    flex-direction: column;
    margin: 0 12vw;

    .list {
      background-color: var(--color-grey);
      border: 0.1rem solid var(--color-black);
      border-radius: 0.5rem;
      display: flex;
      gap: 0.5rem;
      flex-direction: column;
      margin: 1rem 0;
      padding: 1rem;

      .item {
        flex-wrap: wrap;
        justify-content: space-between;
      }
    }

    .date {
      color: var(--color-slate);
    }
  }

  .milestone {
    display: flex;
    flex-direction: column;
    margin: 0 12vw;

    .normal {
      border-bottom-color: var(--color-ghost);
      border-color: transparent;
      border-style: solid;
      border-width: var(--border-width);
    }

    .alert {
      border: var(--border-width) solid var(--color-orange);
    }

    .error {
      border: var(--border-width) solid var(--color-red);
    }

    .secure {
      background-color: var(--color-green);
      color: var(--color-white);
    }

    .insecure {
      background-color: var(--color-red);
      color: var(--color-white);
    }

    .columns {
      background-color: var(--color-black);
      border-top-left-radius: 0.5rem;
      border-top-right-radius: 0.5rem;
      color: var(--color-white);
      display: grid;
      grid-template: 1fr / 4.7fr 1fr 1fr 1fr 1fr 1fr;
      padding: 0.3rem 0;

      .label {
        font-weight: 600;
        text-align: center;
      }
    }

    .header {
      align-items: center;
      display: grid;
      gap: 0.5rem;
      grid-template: repeat(auto-fit, minmax(1rem, 1fr)) / 1fr;
      justify-items: center;
      margin: 1rem 0 2rem 0;

      @media (width >= 900px) {
        grid-template: 1fr / repeat(auto-fit, minmax(1rem, 1fr));

        & > *:first-child {
          justify-self: start;
        }

        & > *:last-child {
          justify-self: end;
        }
      }

      .root, .date {
        font-size: 1.4rem;
        font-weight: 600;
      }

      .title {
        align-items: center;
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        justify-content: center;
        margin: 0;
      }
    }

    .overview {
      align-items: center;
      display: grid;
      gap: 0.5rem;
      grid-template: repeat(auto-fit, minmax(1rem, 1fr)) / 1fr;
      margin-bottom: 0.5rem;

      @media (width >= 900px) {
        grid-template: 1fr / repeat(auto-fit, minmax(1rem, 1fr));

        & > *:first-child {
          justify-self: start;
        }

        & > *:last-child {
          justify-self: end;
        }
      }

      .owner {
        align-items: center;
        display: flex;
        gap: 0.5rem;
        justify-content: center;
      }

      .actions {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
      }
    }

    .row {
      .label {
        font-weight: 600;
      }
    }

    .row[open] > .summary::before {
      content: "\25BC";
      width: 0.5rem;
    }

    .summary {
      align-items: center;
      border-radius: 0.5rem;
      display: grid;
      gap: 0 1rem;
      grid-template: 1fr / auto 5fr 1fr 1fr 1fr 1fr 1fr;
      padding: 0.15rem 0;
      margin: 0.25rem 0 0 0;

      &::-webkit-details-marker {
        display:none;
      }

      &::before {
        color: var(--color-carbon);
        content: "\25B6";
        cursor: pointer;
        width: 0.5rem;
      }

      &:has(~ * .major)::before {
        color: var(--color-major);
      }

      &:has(~ * .minor)::before {
        color: var(--color-minor);
      }

      &:has(~ * .patch)::before {
        color: var(--color-patch);
      }

      &:has(~ * .rebase)::before {
        color: var(--color-orange);
      }

      &:has(~ * .invalid)::before {
        color: var(--color-red);
      }

      &:hover {
        background-color: var(--color-powder);
        border-radius: 0.5rem;
      }

      .title {
        align-items: center;
        display: flex;
        gap: 0 0.5rem;
      }

      .author,
      .files,
      .lines,
      .issue,
      .review {
        text-align: center;
      }

      .avatar {
        vertical-align: middle;
      }

      .lines {
        .deletions {
          color: var(--color-green);
        }

        .insertions {
          color: var(--color-red);
        }
      }
    }

    .details {
      display: grid;
      gap: 1rem;
      grid-template: auto auto auto / auto 1fr;
      grid-template-areas:
        "tag message"
        "tag notes"
        "tag info";

      @media (width >= 1000px) {
        grid-template: 1fr auto / auto 2fr 1fr;
        grid-template-areas:
          "tag message info"
          "tag notes info";
      }

      .tag {
        align-self: stretch;
        border-radius: 0.3rem;
        grid-area: tag;
        margin: 1rem 0;
        padding: 0 0.2rem;
        padding: 0.5rem 0.2rem 0.5rem 0.1rem;
        text-align: center;
        text-transform: capitalize;
        writing-mode: vertical-lr;
      }

      .major {
        background-color: var(--color-major);
        color: var(--color-white);
      }

      .minor {
        background-color: var(--color-minor);
        color: var(--color-white);
      }

      .patch {
        background-color: var(--color-patch);
        color: var(--color-white);
      }

      .rebase {
        background-color: var(--color-orange);
        color: var(--color-white);
      }

      .invalid {
        background-color: var(--color-red);
        color: var(--color-white);
      }

      .unknown {
        background-color: var(--color-carbon);
        color: var(--color-white);
      }

      .bar {
        border-radius: 0.5rem 0.5rem 0 0;
        color: var(--color-black);
        font-size: 1rem;
        font-weight: 600;
        padding: 0 0 0 0.5rem;
        margin: 0;
      }

      .panel {
        display: flex;
        flex-direction: column;
        padding: 0 0.5rem 0.5rem 0.5rem;
      }

      .content {
        margin: 0 0.5rem;
        word-break: break-word;
      }

      .message {
        background-color: var(--color-grey);
        border-radius: 0.5rem;
        grid-area: message;
        margin-top: 1rem;

        .bar {
          background-color: var(--color-smoke);
        }
      }

      .notes {
        background-color: var(--color-cheese);
        border-radius: 0.5rem;
        grid-area: notes;
        margin-bottom: 1rem;

        .bar {
          background-color: var(--color-butter);
        }
      }

      .info {
        grid-area: info;
        background-color: var(--color-ice);
        border-radius: 0.5rem;
        margin: 1rem 0;

        .bar {
          background-color: var(--color-cloud);
        }

        .label {
          font-size: 0.9rem;
        }

        .line {
          align-items: center;
          align-self: start;
          display: flex;
          gap: 0.5rem;
          margin: 0;
          word-break: break-word;
        }
      }
    }

    .footer {
      .totals {
        align-items: center;
        display: flex;
        flex-direction: column;
        font-weight: 600;
        gap: 0.5rem;
        justify-content: center;

        @media (width >= 600px) {
          flex-direction: row;
        }

        .deletions {
          color: var(--color-green);
        }

        .insertions {
          color: var(--color-red);
        }
      }

      .help {
        background: none;
        border: none;
        font-size: 1rem;
      }

      .shortcut {
        margin: 0.5rem 0;
      }

      .actions {
        align-items: center;
        display: flex;
        gap: 0.5rem;
        justify-content: space-between;
        list-style: none;
        margin: 2rem 0;
        padding: 0;

        .action {
          align-items: center;
          border-radius: 0.5rem;
          border: 0.1rem solid var(--color-carbon);
          color: var(--color-carbon);
          display: flex;
          gap: 0.5rem;
          padding: 0.3rem 0.6rem;
          text-decoration: none;
          transition: 0.1s;

          &[data-direction="previous"]::before {
            content: "\2AA6";
          }

          &[data-direction="next"]::after {
            content: "\2AA7";
          }

          &:hover {
            transform: scale(0.95);
          }
        }
      }
    }
  }

  .page-footer {
    .generator {
      display: flex;
      flex-wrap: wrap;
      font-style: italic;
      gap: 0.3rem;
      justify-content: center;
      margin-top: 1rem;
    }
  }
}
